<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnSavePublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnSavePublic" />

    <Button
        android:id="@+id/btnLoadPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnLoadPublic" />

    <Button
        android:id="@+id/btnSavePrivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/btnSavePrivate" />

    <Button
        android:id="@+id/btnLoadPrivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnLoadPrivate" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp" />

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
